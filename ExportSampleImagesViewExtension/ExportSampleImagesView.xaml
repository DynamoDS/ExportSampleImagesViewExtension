<UserControl x:Class="ExportSampleImagesViewExtension.ExportSampleImagesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ui="clr-namespace:Dynamo.UI;assembly=DynamoCoreWpf"
             xmlns:local="clr-namespace:ExportSampleImagesViewExtension"
             UseLayoutRounding="True"
             SnapsToDevicePixels="True"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:SharedResourceDictionary Source="{x:Static ui:SharedDictionaryManager.DynamoModernDictionaryUri}" />
                <ui:SharedResourceDictionary Source="{x:Static ui:SharedDictionaryManager.DynamoConvertersDictionaryUri}" />
                <ui:SharedResourceDictionary Source="{x:Static ui:SharedDictionaryManager.DynamoColorsAndBrushesDictionaryUri}" />
                <ui:SharedResourceDictionary Source="{x:Static ui:SharedDictionaryManager.DynamoModernDictionaryUri}" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="MainGrid" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical">
            <Grid VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label 
                    Content="Source folder: " 
                    Grid.Column="0" 
                    VerticalAlignment="Top" 
                    VerticalContentAlignment="Top" 
                    Foreground="{StaticResource PrimaryCharcoal100Brush}" 
                    FontSize="10"></Label>
                <Border Grid.Column="1" BorderBrush="{x:Null}">
                    <TextBlock Text="{Binding SourcePath}" TextWrapping="Wrap" VerticalAlignment="Top" Padding="5" FontSize="10"></TextBlock>
                </Border>
                <Button Content="..." Grid.Column="2"
                        Command="{Binding SourceFolderCommand}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        DockPanel.Dock="Right"
                        Background="White"
                        BorderBrush="#BFBFBF"
                        Foreground="#3C3C3C"
                        Width="50"
                        Style="{StaticResource SolidButtonStyleSmaller}"/>
            </Grid>
            <Grid VerticalAlignment="Top" Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label 
                    Content="Destination folder: " 
                    Grid.Column="0" 
                    VerticalAlignment="Top" 
                    VerticalContentAlignment="Top" 
                    Foreground="{StaticResource PrimaryCharcoal100Brush}" 
                    FontSize="10"></Label>
                <Border Grid.Column="1" BorderBrush="{x:Null}">
                    <TextBlock Text="{Binding TargetPath}" TextWrapping="Wrap" VerticalAlignment="Top" Padding="5" FontSize="10"></TextBlock>
                </Border>
                <Button Content="..." Grid.Column="2"
                        Command="{Binding TargetFolderCommand}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        DockPanel.Dock="Right"
                        Background="White"
                        BorderBrush="#BFBFBF"
                        Foreground="#3C3C3C"
                        Width="50"
                        Style="{StaticResource SolidButtonStyleSmaller}"/>
            </Grid> 
            <Separator Margin="-20 10"></Separator>
            <StackPanel Orientation="Horizontal">
                <Label Content="File Name: " FontSize="10" 
                       Foreground="{StaticResource PrimaryCharcoal100Brush}" />
                <TextBlock Text="{Binding FileName}" FontSize="10" Padding="5"></TextBlock>
            </StackPanel>
        </StackPanel>

        <DockPanel HorizontalAlignment="Stretch" Grid.Row="1">
            <Button Content="Save Image"
                    Command="{Binding ExportGraphsCommand}"
                    DockPanel.Dock="Right"
                    HorizontalAlignment="Right"
                    Background="White"
                    BorderBrush="#BFBFBF"
                    Foreground="#3C3C3C"
                    Style="{StaticResource SolidButtonStyleSmaller}"/>
            <Button Content="Open"
                    Margin="5 0"
                    Command="{Binding OpenGraphsCommand}"
                    DockPanel.Dock="Right"
                    HorizontalAlignment="Right"
                    Background="White"
                    BorderBrush="#BFBFBF"
                    Foreground="#3C3C3C"
                    Style="{StaticResource SolidButtonStyleSmaller}"/>
        </DockPanel> 
    </Grid>
</UserControl>
